<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ejemplojavafx.MainViewController">
   <children>
      <HBox prefHeight="28.0" prefWidth="600.0">
         <children>
            <MenuBar fx:id="menuBar" prefHeight="29.0" prefWidth="617.0">
              <menus>
                <Menu mnemonicParsing="false" text="Archivo">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Guardar" />
                        <MenuItem mnemonicParsing="false" text="Guardar como ..." />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#onClickMenuArchivoCerrar" text="Cerrar" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Editar">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#onClickMenuEditarUsuario" text="Usuario" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Ayuda">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Acerca de" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </HBox>
      <TableView fx:id="tableView" layoutX="12.0" layoutY="110.0" prefHeight="280.0" prefWidth="577.0">
        <columns>
          <TableColumn fx:id="tbl_col_nombre" prefWidth="129.0" text="Nombre" />
          <TableColumn fx:id="tbl_col_apellidoP" prefWidth="140.0" text="Apellido paterno" />
            <TableColumn fx:id="tbl_col_apellidoM" prefWidth="141.0" text="Apellido materno" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
